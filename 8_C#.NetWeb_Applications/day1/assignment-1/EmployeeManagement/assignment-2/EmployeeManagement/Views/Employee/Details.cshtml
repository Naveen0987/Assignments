@model EmployeeManagement.Models.Employee

<h2>Employee Details</h2>

<div>
    <strong>First Name:</strong> @Model.FirstName
</div>
<div>
    <strong>Middle Name:</strong> @Model.MiddleName
</div>
<div>
    <strong>Last Name:</strong> @Model.LastName
</div>
<div>
    <strong>Email:</strong> @Model.Email
</div>
<div>
    <strong>Phone Number:</strong> @Model.PhoneNumber
</div>
<div>
    <strong>Salary:</strong> @Model.Salary
</div>
<div>
    <strong>Address:</strong> @Model.Address
</div>
<div>
    <strong>Country:</strong> @Model.Country
</div>
<div>
    <strong>Age:</strong> @Model.Age
</div>
<div>
    <strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")
</div>

<div>
    <a asp-action="Index">Back to Employee List</a>
</div>
